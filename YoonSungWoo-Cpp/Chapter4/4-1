#include <iostream>
using namespace std;
//사과 구매를 목적으로 0보다 작은 수를 전달할 수 없다.
//판매자
class FruitSeller
{
private:
	int APPLE_PRICE;
	int numOfApples;
	int myMoney;

public:
	//초기값
	void InitMembers(int price, int num, int money) 
	{
		APPLE_PRICE = price;
		numOfApples = num;
		myMoney = money;
	}
	//판매자의 사과
	int SaleApples(int money) 
	{
		if (money)
		{
			cout << "사과를 구매할 수 없습니다.\n" << endl;
			return 0;
		}
		int num = money / APPLE_PRICE;
		numOfApples -= num;
		myMoney += money;
		return num;
	}
	void ShowSalesResult() const
	{
		cout << "남은 사과: " << numOfApples << endl;
		cout << "판매 수익: " << myMoney << endl << endl;
	}
};

//구매자
class FruitBuyer
{
	int myMoney; //private:
	int numOfApples; //private:

public:
	void InitMember(const int money) 
	{
		myMoney = money;
		numOfApples = 0; 
	}
	void BuyApples(FruitSeller& seller, const int money)
	{
		if (money)
		{
			cout << "사과를 구매할 수 없습니다.\n" << endl;
			return;
		}
		numOfApples += seller.SaleApples(money);
		myMoney -= money;
	}
	void ShowBuyResult() const
	{
		cout << "현재 잔액: " << myMoney << endl;
		cout << "사과 개수: " << numOfApples << endl << endl;
	}
};

int main(void)
{
	FruitSeller seller;
	seller.InitMembers(3000, 20, 0);
	FruitBuyer buyer;
	buyer.InitMember(5000);
	buyer.BuyApples(seller, 2000); //과일의 구매!

	cout << "과일 판매자의 현황" << endl;
	seller.ShowSalesResult();
	cout << "과일 구매자의 현황" << endl;
	buyer.ShowBuyResult();
	return 0;
}
